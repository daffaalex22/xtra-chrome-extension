{
  "manifest_version": 3,
  "name": "Limited X",
  "description": "Minimalize the X.com website",
  "version": "0.1.1",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://x.com/home"
  ]
}